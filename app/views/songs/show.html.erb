<h1><%= @song.title %></h1>

<p>By:<%= @song.artist %></p>

<%= @song.link %>

<hr />

<p>Reviews</p>

<% if @song.reviews %>
  <% @song.reviews.each do |review| %>
    <%= render 'reviews/review', { review: review } %>
  <% end %>
<% else %>
  <p> There are no reviews for this song yet. Be the first!</p>
<% end %>



<%= link_to 'Add a new review', new_song_review_path(@song) %>

<%= link_to 'Edit Song', edit_song_path(@song) %>

<%= link_to 'Delete song', @song, method: :delete, data: { confirm: 'Are you sure?' } %>

<%= link_to 'Back to song list', songs_path %>

